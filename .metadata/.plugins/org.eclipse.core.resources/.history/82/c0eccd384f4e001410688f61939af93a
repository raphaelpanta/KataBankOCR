package raphaelpantaleao.katabanckocr.parser;

public class Zero extends AbstractNumberParser {

	private String zero = " _ | ||_|   ";

	private String getPattern() {
		return zero;
	}

	public String parse(String digits) {
		return parse(digits, 0);
	}

	private String parse(String digits, int pos) {
		int i = pos * 3;
		boolean isZero = false;
		for (int j = 0; j < 4; j++) {
			isZero = digits.charAt(i) == getPattern().charAt(j * 3)
					&& digits.charAt(i + 1) == getPattern().charAt(j * 3 + 1)
					&& digits.charAt(i + 2) == getPattern().charAt(j * 3 + 2);
		}
		if (isZero) {
			if (pos >= 9)
				return "0";
			else
				return "0" + parse(digits, pos++);
		} else {
			return next(digits, pos);
		}
	}

	private String next(String digits, int pos) {
		return null;
	}
}
