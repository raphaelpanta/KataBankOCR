package raphaelpantaleao.katabanckocr.parser;

public abstract class AbstractNumberParser implements NumberParser {

	protected int counter;

	protected abstract String getPattern();

	protected abstract AbstractNumberParser next(String digits);

	public String parse(String digits) {
		return parse(digits, "");
	}

	private String parse(String digits, String number) {
		if (counter > 9) {
			return number;
		} else {
			counter++;
			return parse(digits, number);
		}
	}
}
